{
  "name": "Coronavirus detector",
  "version": "0.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["dist/background.js"]
  },
  "description": "__MSG_app_description__",
  "default_locale": "en",
  "permissions": [
    "<all_urls>",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ],
  "icons": {
    "64": "dist/icons/64.png",
    "256": "dist/icons/256.png"
  },
  "browser_action": {
    "default_icon": {
      "64": "dist/icons/64.png",
      "256": "dist/icons/256.png"
    }
  },
  "web_accessible_resources": [
    "dist/*"
  ]
}